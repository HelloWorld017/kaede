<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
		<meta name="HandheldFriendly" content="True">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="preload" as="script" href="/assets/vendors~kaede-index.bundle.js">
		<link rel="preload" as="script" href="/assets/kaede-index.bundle.js">
		<link rel="preload" as="script" href="{{asset "/kaede.bundle.js"}}">
		
		<link href="{{asset "/kaede.bundle.css"}}" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css?family=Raleway:200,300,400,700&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css?family=Noto+Sans+KR:300,400,500,700&display=swap&subset=korean" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css?family=Noto+Sans+JP:300,400,500,700&display=swap&subset=japanese" rel="stylesheet">

		<title>{{meta_title}}</title>
		<style>
			#SearchEngineOptimization {
				display: none;
			}

			.Body--unsupported #SearchEngineOptimization {
				display: block;
			}
		</style>

		{{ghost_head}}
	</head>

	<body class="{{body_class}}">
		<div id="App"></div>
		<script src="{{asset "/kaede.bundle.js"}}"></script>

		<div id="SearchEngineOptimization">
			{{#post}}
				<article>
					<header>
						<h1>{{title}}</h1>
						<section>
							<time datetime="{{date format='YYYY-MM-DD'}}">
								{{date format="DD MMMM YYYY"}}
							</time>
							<div>{{tags}}</div>
						</section>
					</header>

					<section>
						{{content}}
					</section>
				</article>
			{{/post}}

			{{#foreach posts}}
				<a href="{{url}}">{{title}}</a>
			{{/foreach}}

			{{#if pagination}}
				{{pagination}}
			{{/if}}
		</div>
		{{ghost_foot}}
	</body>
</html>
